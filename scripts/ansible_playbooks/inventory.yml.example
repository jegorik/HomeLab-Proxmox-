# ============================================================================
# Ansible Inventory Example
# ============================================================================
# Copy this file to inventory.yml and modify for your environment
# Documentation: https://docs.ansible.com/ansible/latest/inventory_guide/
# ============================================================================

all:
  # -------------------------------------------------------------------------
  # Host Groups
  # -------------------------------------------------------------------------
  children:
    # Proxmox VE hypervisor hosts
    proxmox:
      hosts:
        pve:
          ansible_host: 192.168.0.204
          ansible_python_interpreter: /usr/bin/python3
    
    # Virtual Machines
    vms:
      hosts:
        ubuntu-server:
          ansible_host: 192.168.0.100
          # ansible_port: 22
        
        # Add more VMs here
        # another-vm:
        #   ansible_host: 192.168.0.101
    
    # LXC Containers
    lxc:
      hosts:
        grafana:
          ansible_host: 192.168.0.202
        
        # Add more containers here
        # monitoring:
        #   ansible_host: 192.168.0.203
    
    # Group hosts by OS family (for conditional tasks)
    debian:
      hosts:
        ubuntu-server:
        grafana:
    
    # redhat:
    #   hosts:
    #     rocky-server:

    # Group hosts by function
    monitoring:
      hosts:
        grafana:
    
    # webservers:
    #   hosts:
    #     nginx-proxy:
    
    # databases:
    #   hosts:
    #     postgres-server:

  # -------------------------------------------------------------------------
  # Global Variables (apply to all hosts)
  # -------------------------------------------------------------------------
  vars:
    # SSH connection settings
    ansible_user: ansible
    ansible_become: true
    ansible_become_method: sudo
    # ansible_ssh_private_key_file: ~/.ssh/ansible_key
    
    # Python interpreter (most modern systems)
    ansible_python_interpreter: /usr/bin/python3
    
    # Connection timeout
    ansible_ssh_timeout: 30
    
    # Package update defaults
    reboot_enabled: true
    reboot_timeout: 300
    clean_packages: true
